<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <CheckBox
            android:text="@string/agree_to_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privacy_agree"/>

    <Switch
            android:text="@string/upload_only_on_wifi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/wifi-only-upload"
            />

    <Switch
            android:text="@string/copy_link_to_clipboard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/copy-clipboard"
            android:checked="true"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#4286f4"
            android:id="@+id/divider-1"/>

    <TextView
            android:text="@string/nothing_domains_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nothing-domains-group-label"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:typeface="normal"
            android:textSize="18sp"/>

    <TextView

            android:text="@string/nothing_domains_key_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nothing-domains-key-label"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textImeMultiLine|textPassword"
            android:ems="10"
            android:id="@+id/nothing-domains-key"
            android:labelFor="@id/nothing-domains-key-label"
            tools:ignore="LabelFor"
            />

    <TextView

            android:text="@string/nothing_domains_base_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nothing-domains-link-label"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/https_nothing_domains"
            android:ems="10"
            android:id="@+id/nothing-domains-link"
            tools:ignore="LabelFor"/>
</LinearLayout>